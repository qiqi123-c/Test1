<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/parent"
    tools:context=".LoginActivity">
 <Button
     android:layout_width="180dp"
     android:layout_height="wrap_content"
     android:id="@+id/btn_guanggao"
     android:background="@drawable/btn_1"
     android:layout_weight="4"
     android:layout_toRightOf="@id/btn_luntan"
     android:text="广告位招租"
     android:textColor="#000000"
     android:textSize="30sp">

 </Button>
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginTop="30dp"
     android:layout_marginBottom="0dp"
     android:layout_weight="20"
     android:id="@+id/center"
     android:gravity="center"
     android:orientation="vertical"
     >
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center"
       android:id="@+id/first"
       android:orientation="horizontal">
    <Button
        android:id="@+id/btn_run"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/btn_5"
        android:text="跑腿"
        android:textColor="#000000"
        android:paddingStart="30dp"
        android:paddingTop="10dp"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/btn_study"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/btn_6"
        android:layout_toRightOf="@id/btn_run"
        android:text="补习"
        android:paddingTop="10dp"
        android:textColor="#000000"
        android:textSize="30sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:layout_below="@id/first"
        android:orientation="horizontal">
    <Button
        android:id="@+id/btn_second"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/btn_7"
        android:text="二手"
        android:textColor="#000000"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/btn_null"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/btn_8"
        android:layout_toRightOf="@id/btn_second"
        android:text="未开放"
        android:textColor="#000000"
        android:textSize="30sp"/>
    </LinearLayout>
 </LinearLayout>

 <LinearLayout
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:layout_marginTop="30dp"
     android:layout_marginBottom="0dp"
   >
 <Button
     android:id="@+id/btn_shouye"
     android:layout_width="100dp"
     android:layout_height="130dp"
     android:layout_weight="1"
     android:background="@drawable/btn_1"
     android:text="首页"
     android:textColor="#000000"
     android:textSize="30sp"/>
 <Button
     android:id="@+id/btn_luntan"
     android:layout_width="100dp"
     android:layout_height="130dp"
     android:layout_weight="1"
     android:background="@drawable/btn_1"
     android:layout_toRightOf="@id/btn_shouye"
     android:text="论坛"
     android:textColor="#000000"
     android:textSize="30sp"/>
 <Button
     android:id="@+id/btn_tongxun"
     android:layout_width="100dp"
     android:layout_weight="1"
     android:layout_height="130dp"
     android:background="@drawable/btn_1"
     android:layout_toRightOf="@id/btn_luntan"
     android:text="通讯"
     android:textColor="#000000"
     android:textSize="30sp"/>
 <Button
     android:id="@+id/btn_geren"
     android:layout_width="100dp"
     android:layout_weight="1"
     android:layout_height="130dp"
     android:background="@drawable/btn_1"
     android:layout_toRightOf="@id/btn_tongxun"
     android:text="个人"
     android:textColor="#000000"
     android:textSize="30sp"/>
 </LinearLayout>

</LinearLayout>

